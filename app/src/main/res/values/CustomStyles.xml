<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ConfigTextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="LanguageCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="StyleCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="NewsDetailsCardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="NewsListItemTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/news_list_item_title_text_size</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>